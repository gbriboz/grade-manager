generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  subject Subject[]
}

model Subject {
  id     Int     @id @default(autoincrement())
  code   String
  name   String
  userId Int
  user   User    @relation(fields: [userId], references: [id])
  Grade  Grade[]
}

model Grade {
  id        Int     @id @default(autoincrement())
  score     Float
  weight    Float
  subjectId Int
  subject   Subject @relation(fields: [subjectId], references: [id])
}
